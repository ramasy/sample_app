<h1>Inscription</h1>
<%= render 'shared/error_messages' %>
<%= form_for(@user) do |f| %>
<div>
	<%= f.label :nom %> <br>
	<%= f.text_field :nom %>
</div>
<div>
	<%= f.label :email %> <br>
	<%= f.text_field :email %>
</div>
<div>
	<%= f.label :password %> <br>
	<%= f.password_field :password %>
</div>
<div>
	<%= f.label :password_confirmation %> <br>
	<%= f.password_field :password_confirmation %>
</div>
<div>
	<%= f.submit "Inscription" %> <br>
</div>
<% end %>