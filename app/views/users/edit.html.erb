<h1>Edition profil</h1>
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div>
	<%= f.label :nom %> <br>
	<%= f.text_field :nom %>
</div>
<div>
	<%= f.label :email %> <br>
	<%= f.text_field :email %>
</div>
<div>
	<%= f.label :password %> <br>
	<%= f.password_field :password %>
</div>
<div>
	<%= f.label :password_confirmation %> <br>
	<%= f.password_field :password_confirmation %>
</div>
<div>
	<%= f.submit "enregistrer" %> <br>
</div>
<% end %>