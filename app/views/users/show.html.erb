
<table class="profile" summary="Information profil">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.nom %>
      </h1> 
      <% unless @user.microposts.empty? %>
        <table class="microposts" summary="Micro-messages de l'utilisateur">
          <%= render @microposts %>
        </table>
        <%= paginate @microposts %>
      <% end %>    
    </td>
    <td class="sidebar round">
      <strong>Nom</strong> <%= @user.nom %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %> <br>
      <strong>email</strong>  <%= @user.email %> <br>
      <strong>Message</strong>  <%= @user.microposts.count %> <br>
      <% if current_user == @user %>
         <%= link_to "Modifier", edit_user_url(@user) %>
      <% end %>
    </td>
  </tr>
</table>