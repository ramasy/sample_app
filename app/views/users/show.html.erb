<% if flash[:info] %>
  <div class="flash-info round">
    <%= flash[:info] %>
  </div>
<% end %>
<table class="profile" summary="Information profil">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.nom %>
      </h1>
    </td>
    <td class="sidebar round">
      <strong>Nom</strong> <%= current_user.nom %><br />
      <strong>URL</strong>  <%= link_to user_path(current_user), current_user %>
    </td>
  </tr>
</table>